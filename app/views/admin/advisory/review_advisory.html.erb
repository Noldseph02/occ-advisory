<div class="col-md-12">
  <div class="page-header">
    <span><b>Issuer:</b> <%= @advisory.user.first_name %></span><br>
    <span><b>Issued Date:</b> <%= @advisory.created_at.strftime('%B %-d, %Y') %></span>
    <span class="pull-right"><b><%= @user.user_department_id == 8 ? 'Alert' : 'Advisory' %> ID:</b> <%= @advisory.advisory_code %></span>
  </div>
  <div class="view-memo">
    <div style="border: 1px solid #000; padding: 8px"><%= @advisory.user.user_department.description %></div>

    <% @advisory.advisory_reasons.each do |ar| %>
      <%  @ar = ar
          @category_ids = ar.advisory_categories.select('distinct(category_id)').order(:category_id).collect{|mc| mc.category_id} %>
      <table class="table table-bordered primary-reason">
        <tr>
          <td width="10%">
            <%= ('REASON' unless ar.reasons.blank?) || ('TIME AND DATE' unless ar.time_and_date.blank?) %>
          </td>
          <% unless ar.reasons.blank? %>
            <% Reason.where(id: ar.reasons).each do |r| %>
              <td width="1%"><%= r.reason %></td>
            <% end %>
          <% end %>
          
          <td class="text-right">
            <% unless @advisory.is_viewable %>
              <a href="/admin/advisory/<%= ar.id %>/edit" style='color: #fff;'>
                <span class="glyphicon glyphicon-pencil"></span> Edit
              </a>&nbsp;|&nbsp;
              <a href="/admin/advisory/delete-advisory-reason/<%= ar.id %>" style='color: #fff;'>
                <span class="glyphicon glyphicon-trash"></span> Delete
              </a>&nbsp;
            <% end %>
          </td>

        </tr>

        <% unless ar.remarks.blank? %>
          <tr>
            <td>REMARKS</td>
            <% unless ar.remarks.blank? %>
              <% Remark.where(id: ar.remarks).each do |r| %>
                <td><%= (ar.other_remarks if r.id == 34) || r.remark %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>

      </table>
      <div style="overflow: auto;">
        <%= render partial: "admin/advisory/format_fields/#{@advisory.user.decorate.department_code}_fields" %>
      </div>
    <% end %>

    
    <div style="margin-bottom: 10px;"></div>
    <div>
      <small>
        In coordination with: <%= @incoordination %>
      </small>
    </div>
    <div>
      <small>
        Recipients: <%= @recipients %>
      </small>
    </div>
    <% if @advisory.is_viewable && @advisory.user_id != @user.id %>
      <div>
        <small>
          Recieved Date: <%= @advisory.sent_date.strftime('%m/%d/%Y (%a) %k%Mz') %>
        </small>
      </div>
    <% end %>
    

    <div class="pull-right below-btns">
      <% unless @advisory.is_viewable %>
          <% if @advisory.user_id == @user.id %>
            <% if @user.user_department_id == 8 %>
              <%= link_to 'Add', "/admin/advisory/new?sid=#{@advisory.sid}&add=true", class: 'btn btn-primary', id: 'btn-add-avisory' %>
            <% end %>
          <% end %>
          <%= button_tag 'Send', class: 'btn btn-primary', id: 'btn-send', type: 'button' %>
          <% if false %>
            <%= link_to 'Edit', "/admin/advisory/#{@advisory.sid}/edit", class: 'btn btn-primary', id: 'btn-edit', disabled: true %>
          <% end  %>
          <%= link_to 'Cancel', "/admin/advisory/inbox", class: 'btn btn-primary'%>
      <% else %>
        <% if @advisory.user_id != @user.id %>
          <% if @user.user_department_id == 8 %>
            <%= link_to 'Create Advisory', "/admin/advisory/new?sid=#{@advisory.sid}", class: 'btn btn-primary' %>
          <% end %>
        <% end %>
        <%= button_tag 'Forward', class: 'btn btn-primary', id: 'btn-forward', type: 'button' %>
        <%= link_to 'Print', "/admin/advisory/print/#{@advisory.sid}", class: 'btn btn-primary', target: '_blank' %>
        <%= link_to 'Back', :back, class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="clearfix"></div>
   
  </div>
</div>
<%= render 'reply_thread' if @advisory.is_viewable %>
<%= hidden_field_tag 'hidden-sid', @advisory.sid %>
<%= render 'modal_password' %>
<%= render 'modal_forward' %>
