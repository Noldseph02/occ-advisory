<% cnt = 0 %>
<table class="table table-bordered category">
  <thead>
    <tr>
      <th>AIRCRAFT REGISTRY</th>
      <th>AIRCRAFT TYPE</th>
      <th>FLIGHT NUMBER</th>
      <th>FLIGHT DATE</th>
      <th>REMARKS</th>
    </tr>
  </thead>
  <tbody>
    <% @ar.advisory_categories.order(:created_at).decorate.each do |mc| %>
      <tr>
        <td><%= "RP-N#{mc.ac_registry}" || 'N/A' %></td>
        <td><%= mc.aircraft_type || 'N/A' %></td>
        <td><%= mc.flight_number || 'N/A' %></td>
        <td><%= mc.flight_date.try(:strftime, '%m-%d-%y (%a)') || 'N/A' %></td>
        <td><%= mc.remarks || 'N/A' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
