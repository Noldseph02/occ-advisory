<div class="content-memo">
  <div class="col-md-12">
    <div class="page-header">
      <h3>Operations Control Department</h3>
    </div>
    <%= render 'message' %>
    <div class="col-md-8 col-md-offset-2">
      <%= form_for @advisory, url: { controller: 'advisory', action: 'create' }, html: { method: :post, class: 'form-horizontal' } do |f| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            Advisory Header
          </div>
          <div class="panel-body">
            <div class="form-group">
              <div class="col-sm-6">
                <label class="form-label">Recipient:</label>
                <%= f.select :recipients, options_for_select(UserDepartment.where.not(id: [1]).order(:code).collect { |u| [u[:code], u[:id]] }), {}, id: 'recipient-select', class: 'form-control', multiple: 'multiple', required: true %>
              </div>
              <div class="col-sm-6">
                <label class="form-label">Incoordinate with:</label>
                <%= f.select :incoordinate_with, options_for_select(User.where.not(id: [@user.id]).order(:email).collect { |u| [u[:email], u[:id]] }), {}, id: 'incoordinate-select', class: 'form-control', multiple: 'multiple', required: true %>
              </div>
            </div>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            Primary Reason
          </div>
          <div class="panel-body">
            <div class="form-group">
              <div class="col-sm-6">
                <label class="form-label">Reason:</label>
                <%= f.select :reasons, Reason.all.order(:reason).collect { |r| [r.reason, r.id] }, {}, id: 'reason-select', class: 'form-control', multiple: 'multiple', required: true %>
              </div>
              <% unless @user.user_department_id == 4 %>
                <div class="col-sm-6">
                  <label class="form-label">Remarks:</label>
                  <%= f.select :remarks, Remark.where(id: [26,27,30,31,32,33,34]).order(:remark).collect { |r| [r.remark, r.id] }, {}, id: 'remarks-select', class: 'form-control', multiple: 'multiple', required: true %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div id="panel-category">
          <div class="panel panel-default" id="main-category">
            <div class="panel-heading">
              Category
              <button type="button" onclick="add_category()" class="btn-link pull-right">
                <span class="glyphicon glyphicon-plus"></span>
              </button>
            </div>
            <div class="panel-body">
              <%= render 'category', f: f %>
            </div>
          </div>
        </div>

        <div class="text-right" style="margin-bottom: 30px;">
          <%= f.button 'Submit', class: 'btn btn-primary' %>
        </div>

        <script type="text/javascript">
          function add_category() {
            var id = Math.floor((Math.random() * 10000000) + 1);
            var category_count = $(".additional-category").length + 1;
            var html = '<div class="panel panel-default additional-category" id="additional-category'+id+'">'
                      + '<div class="panel-heading">'
                      + '#'+(category_count + 1)+' Additional Category'
                      + '<button onclick="delete_category('+id+')" class="btn-link pull-right">'
                      + '<span class="glyphicon glyphicon-trash"></span>'
                      + '</button>'
                      + '</div>'
                      + '<div class="panel-body" data-id="'+id+'">'
                      + "<%= escape_javascript("#{ render 'category', f: f }").html_safe %>"
                      + '</div></div></div>';
            $("#panel-category").append(html);
            init();
            select_advisory_category($("#additional-category" + id).find("#select-adv-category"));

            $("#additional-category" + id).find('.field').each(function(){
              var field_name = $(this).data('field');
              $(this).attr("name","advisory[advisory_categories_attributes]["+category_count+"]["+field_name+"]");
            });

            $('html, body').animate({ scrollTop: $("#additional-category" + id).offset().top }, 50);
          }

          function delete_category(id) {
            $("#additional-category" + id).remove();
          }
        </script>

      <% end %>
    </div>
  </div>
</div>