<%= @ar.fields_for :advisory_categories do |ac|%>
  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">Aircraft Registry</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <span class="input-group-addon">RP-N</span>
            <%= ac.text_field :ac_registry, 'data-field': 'ac_registry', class: 'form-control field' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">Aircraft Type</label>
        </div>
        <div class="col-sm-9">
          <%= ac.select :aircraft_type_id, AircraftType.all.order(:ac_type).collect { |l| [l.ac_type, l.id] }, { include_blank: true }, 'data-field': 'aircraft_type_id', class: 'form-control field' %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">Flight Number</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <span class="input-group-addon">X</span>
            <%= ac.text_field :flight_number, 'data-field': 'flight_number', class: 'form-control field' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">Flight Date</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <%= ac.text_field :flight_date, class: 'form-control has-date-picker field', 'data-field': 'flight_date', required: true %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">Remarks</label>
        </div>
        <div class="col-sm-9">
          <%= ac.text_area :remarks, 'data-field': 'remarks', class: 'form-control field' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
