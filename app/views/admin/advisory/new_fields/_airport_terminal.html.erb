<%= @ar.fields_for :advisory_categories do |ac|%>
  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-4">
          <label class="form-label">Tow Out</label>
        </div>
        <div class="col-sm-8">
          <div class="input-group">
            <%= ac.text_field :tow_out, class: 'form-control has-time-picker field', 'data-field': 'tow_out', required: true %>
