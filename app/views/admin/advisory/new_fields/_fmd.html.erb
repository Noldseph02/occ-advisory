<%= @ar.fields_for :advisory_categories do |ac|%>
  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">APU INOP</label>
        </div>
        <div class="col-sm-9">
          <%= ac.text_field :apu_inoperative, class: 'form-control field', required: true, 'data-field': 'apu_inoperative' %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">SEAT BLKS</label>
        </div>
        <div class="col-sm-9">
          <%= ac.text_field :seat_blocks, class: 'form-control field', required: true, 'data-field': 'seat_blocks' %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">NO AVI</label>
        </div>
        <div class="col-sm-9">
          <%= ac.text_field :no_avi, class: 'form-control field', required: true, 'data-field': 'no_avi' %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">RSTRTN</label>
        </div>
        <div class="col-sm-9">
          <%= ac.text_field :restriction, class: 'form-control field', required: true, 'data-field': 'restriction' %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">ACU PROB</label>
        </div>
        <div class="col-sm-9">
          <%= ac.text_field :acu_problem, class: 'form-control field', required: true, 'data-field': 'acu_problem' %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">AOG</label>
        </div>
        <div class="col-sm-9">
          <%= ac.text_field :ac_on_ground, class: 'form-control field', required: true, 'data-field': 'ac_on_ground' %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">Remarks</label>
        </div>
        <div class="col-sm-9">
          <%= ac.text_area :remarks, class: 'form-control field', 'data-field': 'remarks' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
