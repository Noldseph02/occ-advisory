<div class="modal fade" tabindex="1" role="dialog" data-backdrop="static" data-keyboard="false" id="modal-insert-password">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title pull-left">Enter your password.</h5>
        <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span> 
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= text_field_tag nil, nil, name: 'check-password', class: 'form-control', type: 'password', placeholder: 'Password' %>
        </div>
        <div class="form-group">
          <label style="font-weight: normal; margin: 0;">Select Priority</label>
          <%= select('','priority',[['High', '3'], ['Medium', '2'], ['Low', '1']], {}, class: 'form-control') %>
        </div>
      </div>
      <div class="modal-footer">
        <%= button_tag 'Enter', class: 'btn btn-primary pull-right', id: 'btn-check-password', 'data-id': 'advisory' %>
      </div>
    </div>
  </div>
</div>
