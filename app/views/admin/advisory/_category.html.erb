<%= f.fields_for :advisory_categories do |mc|%>
  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">Category:</label>
        </div>
        <div class="col-sm-9">
        <%= mc.select :category_id, Category.where(id: [11..19]).order(:category).collect { |c| [c.category, c.id] }, { include_blank: true }, id: 'select-adv-category', class: 'form-control field', 'data-field': 'category_id', onchange: 'select_advisory_category(this)' %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6 mb-15">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">FD</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <%= mc.text_field :flight_date, class: 'form-control has-date-picker field', 'data-field': 'flight_date', required: true %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6 mb-15">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">FN</label>
        </div>
        <div class="col-sm-9">
          <%= mc.text_field :flight_number, 'data-field': 'flight_number', class: 'form-control field' %>
        </div>
      </div>
    </div>

    <div class="col-sm-6 mb-15">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">Route</label>
        </div>
        <div class="col-sm-9">
          <div class="row">
            <div class="col-sm-6">
              <%= mc.text_field :route_origin, 'data-field': 'route_origin', class: 'form-control field', placeholder: 'Origin' %>
            </div>
            <div class="col-sm-6">
              <%= mc.text_field :route_destination, 'data-field': 'route_destination', class: 'form-control field', placeholder: 'Destination' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6 mb-15">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">ACR</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <span class="input-group-addon">RP-N</span>
            <%= mc.text_field :ac_registry, 'data-field': 'ac_registry', class: 'form-control field' %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6 mb-15">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">ACT</label>
        </div>
        <div class="col-sm-9">
          <%= mc.select :aircraft_type_id, AircraftType.all.order(:ac_type).collect { |l| [l.ac_type, l.id] }, { include_blank: true }, 'data-field': 'aircraft_type_id', class: 'form-control field' %>
        </div>
      </div>
    </div>
    <div class="col-sm-6 mb-15">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">ACC</label>
        </div>
        <div class="col-sm-9">
          <%= mc.text_field :ac_configuration, 'data-field': 'ac_configuration', class: 'form-control field' %>
        </div>
      </div>
    </div>

    <div class="col-sm-6 mb-15 f f17 f11 f12">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">ETD</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <%= mc.text_field :etd, class: 'form-control has-time-picker field', 'data-field': 'etd', required: true %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6 mb-15 f f17 f11 f12">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">ETA</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <%= mc.text_field :eta, class: 'form-control has-time-picker field', 'data-field': 'eta', required: true %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6 mb-15 f f11">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">NETD</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <%= mc.text_field :netd, class: 'form-control has-time-picker field', 'data-field': 'netd', required: true %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6 mb-15 f f11">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">NETA</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <%= mc.text_field :neta, class: 'form-control has-time-picker field', 'data-field': 'neta', required: true %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6 mb-15 f f11">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">DUR</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <%= mc.text_field :duration_of_delay, class: 'form-control has-time-picker field', 'data-field': 'duration_of_delay', required: true %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6 mb-15 f f19 f12">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">DEP TER</label>
        </div>
        <div class="col-sm-9">
          <%= mc.select :departure_terminal, [['Terminal A', 'A'], ['Terminal B', 'B'], ['Terminal C', 'C']], { include_blank: 'Select Terminal'}, 'data-field': 'departure_terminal', class: 'form-control field', required: true  %>
        </div>
      </div>
    </div>

    <div class="col-sm-6 mb-15 f f19 f12">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">ARR TER</label>
        </div>
        <div class="col-sm-9">
          <%= mc.select :arrival_terminal, [['Terminal A', 'A'], ['Terminal B', 'B'], ['Terminal C', 'C']], { include_blank: 'Select Terminal'}, 'data-field': 'arrival_terminal', class: 'form-control field', required: true  %>
        </div>
      </div>
    </div>

    <div class="col-sm-6 mb-15 f f15 f11">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">Pax</label>
        </div>
        <div class="col-sm-9">
          <%= mc.text_field :pax, 'data-field': 'pax', class: 'form-control field', required: true %>
        </div>
      </div>
    </div>

    <div class="col-sm-6 mb-15">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">Remarks</label>
        </div>
        <div class="col-sm-9">
          <%= mc.text_area :remarks, 'data-field': 'remarks', class: 'form-control field', required: true %>
        </div>
      </div>
    </div>
  </div>
<% end %>
