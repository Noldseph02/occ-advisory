<div class="panel panel-default">
  <div class="panel-heading search-panel">
    <div class="row">
      <div class="col-sm-4 mb15">
        <%= text_field_tag 'tb-search', nil, class: 'form-control', placeholder: 'Search' %>
      </div>
      <div class="col-sm-4 mb15">
        <%= select(nil, :user_department_id, UserDepartment.where(is_enable: true).where.not(id: [1] << @user.user_department_id).order(:description).collect { |a| [a.description, a.id] }, {selected: @dept_id, include_blank: 'All Departments'}, class: 'form-control') %>
      </div>
      <div class="col-sm-4 mb15">
        <div class="col-sm-3">
          <div class="row">
            <label class="form-label">Flight Date:</label>
          </div>
        </div>
        <div class="col-sm-9">
          <div class="row">
            <div class="input-group">
              <%= date_field_tag nil, nil, id: 'flight_date', class: 'form-control' %>
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-4 mb15">
        <div class="col-sm-5">
          <div class="row">
            <label class="form-label">Aircraft Plate No.:</label>
          </div>
        </div>
        <div class="col-sm-7">
          <div class="row">
            <div class="input-group">
              <span class="input-group-addon">RP-N</span>
              <%= text_field_tag 'tb-ac_registry', nil, class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-4 mb15">
        <div class="col-sm-3">
          <div class="row">
            <label class="form-label">Flight No.:</label>
          </div>
        </div>
        <div class="col-sm-9">
          <div class="row">
            <div class="input-group">
              <span class="input-group-addon">X</span>
              <%= text_field_tag 'tb-flight_number', nil, class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>

      <% if @user.user_department_id == 7 %>
        <div class="col-sm-4 mb15">
          <div class="col-sm-3">
            <div class="row">
              <label class="form-label">Issued By:</label>
            </div>
          </div>
          <div class="col-sm-9">
            <%= select(nil, :user_id, User.where(user_department_id: 7, is_enable: true).where.not(id: @user.id).order(:first_name).collect { |a| [a.first_name, a.id] }, {selected: @dept_id, include_blank: ''}, class: 'form-control') %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="panel-body memo-lists" id="inbox-lists">
    <%= render 'inbox_body' %>
  </div>
</div>
