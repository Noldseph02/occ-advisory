<% cnt = 0 %>
<div class="content-memo">
  <div class="col-md-12">
    <div class="page-header">
      <h3><%= @user.user_department.description.titleize %></h3>
    </div>
    <%= render 'message' %>
    <div class="col-md-8 col-md-offset-2">
      <%= form_for [:admin, @memo], html: { class: 'form-horizontal' } do |f| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            Advisory Header
          </div>
          <div class="panel-body">
            <div class="form-group">
              <div class="col-sm-6">
                <label class="form-label">Recipient:</label>
                <%= f.hidden_field :recipients %>
                <%= f.select :recipients, options_for_select(UserDepartment.where.not(id: [1]).order(:code).collect { |u| [u[:code], u[:id]] }), {}, id: 'recipient-select', class: 'form-control', multiple: 'multiple', required: true %>
              </div>
              <div class="col-sm-6">
                <label class="form-label">Incoordinate with:</label>
                <%= f.hidden_field :incoordinate_with %>
                <%= f.select :incoordinate_with, options_for_select(User.where.not(id: [@user.id]).order(:email).collect { |u| [u[:email], u[:id]] }), {}, id: 'incoordinate-select', class: 'form-control', multiple: 'multiple', required: true %>
              </div>
            </div>
          </div>
        </div>

        <%= render "admin/memo/primary_reason/#{ @heading }", f: f %>

        <div id="panel-category">
          <% @memo.memo_categories.each do |mc| %>
            <div class="panel panel-default <%= 'additional-category' if cnt > 0 %>" id="<%= cnt > 0 ? "additional-category#{mc.id}" : 'main-category' %>">
              <div class="panel-heading">
                <%= "##{cnt + 1} Additional " if cnt > 0 %>Category
                <% if cnt > 0 %>
                  <button onclick="delete_category(<%= mc.id %>)" class="btn-link pull-right">
                    <span class="glyphicon glyphicon-trash"></span>
                  </button>
                <% else %>
                  <button type="button" onclick="add_category()" class="btn-link pull-right">
                    <span class="glyphicon glyphicon-plus"></span>
                  </button>
                <% end %>
              </div>
              <div class="panel-body" data-id="<%= mc.id %>">
                <%= render "/admin/memo/edit/#{@user.department_code}", mc: mc, cnt: cnt %>
              </div>
            </div>
            <% cnt += 1 %>
          <% end %>
        </div>
        

        <div class="text-right" style="margin-bottom: 30px;">
          <%= f.button 'Submit', class: 'btn btn-primary' %>
        </div>

        <script type="text/javascript">
          $(document).ready(function(){
            var recipients = $("#memo_recipients").val().split(' ');
            var incoordinate_with = $("#memo_incoordinate_with").val().split(' ');
            $("#recipient-select").val(recipients).trigger('change');
            $("#incoordinate-select").val(incoordinate_with).trigger('change');
          });

          function add_category() {
            var id = Math.floor((Math.random() * 10000000) + 1);
            var category_count = $(".additional-category").length + 1;
            var html = '<div class="panel panel-default additional-category" id="additional-category'+id+'">'
                      + '<div class="panel-heading">'
                      + 'Additional Category'
                      + '<button onclick="delete_category('+id+')" class="btn-link pull-right">'
                      + '<span class="glyphicon glyphicon-trash"></span>'
                      + '</button>'
                      + '</div>'
                      + '<div class="panel-body" data-id="'+id+'">'
                      + "<%= escape_javascript("#{ render "/admin/memo/edit/#{@user.department_code}", mc: nil, cnt: 0 }").html_safe %>"
                      + '</div></div></div>';
            $("#panel-category").append(html);
            init();
            select_category($("#additional-category" + id).find("#select-category"));

            $("#additional-category" + id).find('.field').each(function(){
              var field_name = $(this).data('field');
              var add = field_name == 'frequencies' ? '[]' : '';
              $(this).attr("name","memo[memo_categories_attributes]["+category_count+"]["+field_name+"]" + add);
            });
            $(".frequency-select").select2({
              theme: 'bootstrap'
            });
          }

          function delete_category(id) {
            $("#additional-category" + id).remove();
          }
        </script>
      <% end %>
    </div>
  </div>
</div>
<%= render 'modal_password' %>
