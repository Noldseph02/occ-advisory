<div class="col-md-12">
  <div class="page-header">
    <h3>Airport Terminal</h3>
  </div>
  <div class="col-md-8 col-md-offset-2">
    <form class="form-horizontal">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="form-group">
            <div class="col-md-5 text-right">
              <label class="form-label">A/C R</label>
            </div>
            <div class="col-md-4">
              <input type="text" class="form-control" name="">
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-5 text-right">
              <label class="form-label">Towing Update</label>
            </div>
            <div class="col-md-4">
              <div class="col-md-12">
                <div class="form-group">
                  <input type="text" class="form-control" name="" placeholder="Tow Out">
                </div>
                <div class="form-group">
                  <input type="text" class="form-control" name="" placeholder="Tow In">
                </div>
                <div class="form-group">
                  <input type="text" class="form-control" name="" placeholder="Block In">
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-5 text-right">
              <label class="form-label">Cause/Purpose</label>
            </div>
            <div class="col-md-4">
              <textarea class="form-control"></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-5 text-right">
              <label class="form-label">Boarding of Cockpit Crew</label>
            </div>
            <div class="col-md-4">
              <input type="text" class="form-control" name="">
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-5 text-right">
              <label class="form-label">Boarding of Cabin Crew</label>
            </div>
            <div class="col-md-4">
              <input type="text" class="form-control" name="">
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-5 text-right">
              <label class="form-label">General Boarding</label>
            </div>
            <div class="col-md-4">
              <input type="text" class="form-control" name="">
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-5 text-right">
              <label class="form-label">Cargo/Baggage Boarding</label>
            </div>
            <div class="col-md-4">
              <input type="text" class="form-control" name="">
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-5 text-right">
              <label class="form-label">Aircraft Status</label>
            </div>
            <div class="col-md-4">
              <textarea class="form-control"></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-5 text-right">
              <label class="form-label">Remarks</label>
            </div>
            <div class="col-md-4">
              <textarea class="form-control"></textarea>
            </div>
          </div>

        </div>
        <div class="panel-footer text-right">
          <%= button_tag 'Submit', class: 'btn btn-primary' %>
        </div>
      </div>
    </form>
  </div>
</div>
