<%= f.fields_for :memo_categories do |mc|%>
  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">ACR</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <span class="input-group-addon">RP-N</span>
            <%= mc.text_field :ac_registry, 'data-field': 'ac_registry', class: 'form-control field' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">ACT</label>
        </div>
        <div class="col-sm-9">
          <%= mc.select :aircraft_type_id, AircraftType.all.order(:ac_type).collect { |l| [l.ac_type, l.id] }, {}, 'data-field': 'aircraft_type_id', class: 'form-control field' %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">FN</label>
        </div>
        <div class="col-sm-9">
          <%= mc.text_field :flight_number, 'data-field': 'flight_number', class: 'form-control field' %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">FD</label>
        </div>
        <div class="col-sm-9">
          <div class="input-group">
            <%= mc.text_field :flight_date, class: 'form-control has-date-picker field', 'data-field': 'flight_date', required: true %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-3 text-right">
          <label class="form-label">Remarks</label>
        </div>
        <div class="col-sm-9">
          <%= mc.text_area :remarks, 'data-field': 'remarks', class: 'form-control field', required: true %>
        </div>
      </div>
    </div>
  </div>
<% end %>
